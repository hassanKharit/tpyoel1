{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>User</th>
                <th>User_id</th>
                <th>Produit_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.titre }}</td>
                <td>{{ commentaire.description }}</td>
                <td>{{ commentaire.user }}</td>
                <td>{{ commentaire.userId }}</td>
                <td>{{ commentaire.produitId }}</td>
                <td>
                    <a href="{{ path('app_rcommentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_rcommentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rcommentaire_new') }}">Create new</a>
{% endblock %}
